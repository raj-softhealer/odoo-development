<?xml version="1.0" encoding="UTF-8"?>  
<odoo>
    <data>
        <record id="cron_job_mail_template" model="mail.template">
            <field name="name">Daily Order Summary</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="subject">Daily Summary</field>
            <field name="email_from">{{object.env.user.email_formatted}}</field>
            <field name="email_to"></field>
            <field name="description">Thank You</field>
            <field name="body_html" type="xml">
                <div>
                    <p>Find the attached summary</p>
                </div>
            </field>
            <field name="report_template_ids" eval="[(4,ref('sh_email_configuration.action_for_cron_email'))]"/>
        </record>
    </data>
</odoo>