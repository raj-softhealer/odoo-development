<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_template_for_cron">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">

                    <t t-call="sh_email_configuration.main_template_for_cron" />
                </t>
            </t>
        </template>


        <template id="main_template_for_cron">
            <t t-set="today" t-value="datetime.date.today()" />
            <table class="table">
                <tbody>
                    <h1 t-esc="datetime.date.today()"></h1>
                    <t t-foreach="env['sale.order'].search([])" t-as="doc">
                        <t t-if="doc.date_order.date() == today and doc.state == 'sale'">

                            <tr>

                                <td class="text-center">
                                    <span t-esc="doc.name" />
                                </td>

                                <td class="text-center">
                                    <span t-esc="doc.create_date" />
                                </td>

                                <td class="text-center">
                                    <span t-esc="doc.partner_id.name" />
                                </td>

                                <td class="text-center">
                                    <span t-esc="doc.user_id.name" />
                                </td>

                                <td class="text-center">
                                    <span t-esc="doc.company_id.name" />
                                </td>

                                <td class="text-center">
                                    <span t-esc="doc.amount_total" />
                                </td>

                                <td class="text-center">
                                    <span t-esc="doc.state" />
                                </td>
                            </tr>
                        </t>
                    </t>

                </tbody>
            </table>

        </template>


        <record id="action_for_cron_email" model="ir.actions.report">
            <field name="name">Report for cron job</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sh_email_configuration.report_template_for_cron</field>
            <field name="report_file">sh_email_configuration.report_template_for_cron</field>
            <field name="print_report_name">'Daily Summary'</field>
            <field name="binding_model_id" ref="model_sale_order" />
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>