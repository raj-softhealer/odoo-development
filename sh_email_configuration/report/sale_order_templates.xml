        <template id="main_template_for_cron">

            <table class="table">
                <tbody>
                    <h1 t-esc="datetime.date.today()"></h1>
                    <t t-foreach="docs" t-as="doc">
                        <tr>
                            <td class="text-center">
                                <span t-esc="doc.name" />
                            </td>

                            <td class="text-center">
                                <span t-esc="doc.create_date" />
                            </td>

                            <td class="text-center">
                                <span t-esc="doc.partner_id.name" />
                            </td>

                            <td class="text-center">
                                <span t-esc="doc.user_id.name" />
                            </td>

                            <td class="text-center">
                                <span t-esc="doc.company_id.name" />
                            </td>

                            <td class="text-center">
                                <span t-esc="doc.amount_total" />
                            </td>

                            <td class="text-center">
                                <span t-esc="doc.state" />
                            </td>
                        </tr>

                    </t>

                </tbody>
            </table>

        </template>


    </data>
</odoo>