<odoo>
    <odoo>
        <record id="configuration_settings_email_send" model="ir.ui.view">
            <field name="name">res.config.customforemail</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='companies']" position="before">
                     <div id="email_cron">
                            <block title="Email Cron " name="email_send_setting_container">
                                <setting id="email_send_setting">
                                   <field name="sh_send_email" string="Email Send"/>
                                </setting>

                                <setting id="email_send_setting_m2m">
                                   <field name="sh_user_to_send" widget="many2many_tags" string="Send To"/>
                                </setting>

                            </block>
                        </div>
                </xpath>
            </field>
        </record>
    </odoo>
</odoo>