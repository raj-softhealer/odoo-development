<odoo>
  <data>

    <!-- form view -->
    <record id="view_change_product" model="ir.ui.view">
      <field name="name">product.change.form</field>
      <field name="model">product.change</field>
      <field name="arch" type="xml">
        <form>

          <sheet>

            <group >
              <div class="d-flex justify-content-between">

                <div>
                  <label for="default_code">Internal Reference</label><br/>
                 <h3>
                   <field name="default_code" readonly="1"/>
                  </h3> 
                </div>

                <div>
                  <label for="lst_price">Sell Price</label>
                  <h3>
                    <field name="lst_price" readonly="1"/>
                  </h3>
                </div>
                
                <div>
                  <label for="qty_available">Onhand quantity</label>
                  <h3>
                    <field name="qty_available" readonly="1"/>
                  </h3>
                </div>
                
                <div>
                  
                    <button string="View Stock" class="oe_highlight" type="object" name="action_open_vew_stock"/>
                  
                </div>

              </div>
                

              </group>
                        
            <group>
              <field name="replace_prod"/>
            </group>
                        
            <group>
              <field name="alternate_products" readonly="1">
                <list>
                  <field name="default_code" />
                  <field name="name" />
                  <field name="lst_price" />
                  <field name="qty_available" />
                  <button string="View Stock" class="oe_highlight" type="object" name="action_open_view_stock_alternate_product"/>
                </list>
              </field>
            </group>

          </sheet>




          <footer>
            <button string="Save" type="object" name="action_save_product_change" class="oe_highlight"/>
            <button string="Cancel" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>


  </data>
</odoo>