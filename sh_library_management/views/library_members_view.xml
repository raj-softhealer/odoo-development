<odoo>
  <data>

    <!-- form view -->
    <record id="view_library_member_form" model="ir.ui.view">
      <field name="name">library.memberss.form</field>
      <field name="model">library.memberss</field>
      <field name="arch" type="xml">
        <form string="Lbrary Member">
          
          <sheet>
          <!-- <div class="oe_button_box" name="button_box">
            
            <button type="object" name="action_copies" class="oe_stat_button" icon="fa-book">
              <field name="available_copies" string="Available Copies" widget="statinfo" />
            </button>
            
          </div> -->
          

            <group>

              <field name="members_id" string="Member Name"/>
              <field name="member_from"  string="Valid From"/>
              <field name="member_to" string="To" />

              <notebook>
                <page string="Borrow History">
                  
                  <field name="borrow_history"/>
                </page>
                <page string="Other details">
                  <form string="User Activate">
                      <group>
                        <field string="Active" name="is_active" widget="boolean_toggle"/>
                      </group>
                  </form>
                </page>

              </notebook>


            </group>
          </sheet>
          <chatter />
        </form>
      </field>
    </record>


    <!-- List view -->
    <record id="view_library_member_list" model="ir.ui.view">
      <field name="name">library.memberss.list</field>
      <field name="model">library.memberss</field>
      <field name="arch" type="xml">
        <list>
              <field name="members_id" string="Member Name"/>
              <field name="member_from"  string="Valid From"/>
              <field name="member_to" string="To" />
              <field name="borrow_history"/>
        </list>
      </field>
    </record>


    <!-- Search view -->
    <record id="view_library_member_search" model="ir.ui.view">
      <field name="name">library.memberss.search</field>
      <field name="model">library.memberss</field>
      <field name="arch" type="xml">
        <search>
              <field name="members_id" string="Member Name"/>
              <field name="member_from"  string="Valid From"/>
              <field name="member_to" string="To" />
              <field name="borrow_history"/>
        </search>
      </field>
    </record>


    <!-- kanban view -->
    <record id="view_library_member_kanban" model="ir.ui.view">
      <field name="name">library.memberss.kanban</field>
      <field name="model">library.memberss</field>
      <field name="arch" type="xml">
        <kanban>
          <templates>
            <t t-name="card">
              <b>
                  <field name="members_id" string="Member Name"/>
                </b>
              <field name="member_from"  string="Valid From"/>
              <field name="member_to" string="To" />
              <field name="borrow_history"/>

            </t>
          </templates>
        </kanban>
      </field>
    </record>


    <!-- Actions -->
    <record id="action_library_member" model="ir.actions.act_window">
      <field name="name">Library Members</field>
      <field name="res_model">library.memberss</field>
      <field name="view_mode">list,kanban,form</field>
    </record>

  </data>
</odoo>