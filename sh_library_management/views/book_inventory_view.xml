<odoo>
    <data>

  <!-- form view -->
  <record id="view_book_inventory_form" model="ir.ui.view">
    <field name="name">book.inventory.form</field>
    <field name="model">book.inventory</field>
    <field name="arch" type="xml">
      <form string="Book Inventory">
        <sheet>
          <group>

            <field name="book_title"/>
            <field name="author"  widget="many2many_tags"/>
            <field name="categories"  widget="many2many_tags"/>
            <field name="publisher"/>
            <field name="isbn"/>
            <field name="currency_id" invisible="1"/>
            <field name="price"/>
            <field name="status"/>

          </group>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>


  <!-- List view -->
  <record id="view_book_inventory_list" model="ir.ui.view">
    <field name="name">book.inventory.list</field>
    <field name="model">book.inventory</field>
    <field name="arch" type="xml">
      <list>
            <field name="book_title"/>
            <field name="author"  widget="many2many_tags"/>
            <!-- <field name="categories"  widget="many2many_tags"/> -->
            <!-- <field name="publisher"/> -->
            <!-- <field name="isbn"/> -->
            <field name="price"/>
            <field name="status"/>
      </list>
    </field>
  </record>


  <!-- Search view -->
  <record id="view_book_inventory_search" model="ir.ui.view">
    <field name="name">book.inventory.search</field>
    <field name="model">book.inventory</field>
    <field name="arch" type="xml">
      <search>
            <field name="book_title"/>
            <field name="author"  widget="many2many_tags"/>
            <field name="categories"  widget="many2many_tags"/>
            <field name="publisher"/>
            <field name="isbn"/>
      </search>
    </field>
  </record>


  <!-- kanban view -->
  <record id="view_book_inventory_kanban" model="ir.ui.view">
    <field name="name">book.inventory.kanban</field>
    <field name="model">book.inventory</field>
    <field name="arch" type="xml">
      <kanban>
        <templates>
          <t t-name="card">
            <b>
              <field name="book_title"/>
            </b>
            
            <field name="author"  widget="many2many_tags"/>
            <field name="categories"  widget="many2many_tags"/>

          </t>
        </templates>
      </kanban>
    </field>
  </record>



  <!-- Actions -->
  <record id="action_book_inventory" model="ir.actions.act_window">
    <field name="name">Book Inventory</field>
    <field name="res_model">book.inventory</field>
    <field name="view_mode">list,kanban,form</field>
  </record>

  </data>
</odoo>
