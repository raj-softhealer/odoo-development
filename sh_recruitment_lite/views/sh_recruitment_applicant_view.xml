<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="recruitment_applicant_form" model="ir.ui.view">
            <field name="name">recruitment.applicant.form</field>
            <field name="model">recruitment.applicant</field>
            <field name="arch" type="xml">
                <form>
                        <header>
                        <field name="sh_stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                        </header>
                    <group>
                        <field name="name" readonly='sh_stage_id in [4,5]'/>
                        <field name="sh_email" readonly='sh_stage_id in [4,5]'/>
                        <field name="sh_job_id" readonly='sh_stage_id in [4,5]' domain="[('sh_state', '=', 'open')]"/>
                        <field name="sh_skill_ids" widget="many2many_tags" readonly='sh_stage_id in [4,5]'/>
                        <field name="sh_applicant_user_id" readonly='sh_stage_id in [4,5]' />
                        <field name="sh_rejection_reason" invisible="sh_stage_id in [1,2,3,4]" required='sh_stage_id in [5]'/>

                    </group>

                </form>
            </field>
        </record>



        <!-- kanban view -->
<record id="view_recruitment_applicant_kanban" model="ir.ui.view">
            <field name="name">recruitment.applicant.kanban</field>
            <field name="model">recruitment.applicant</field>
            <field name="arch" type="xml">
                <kanban default_group_by="sh_stage_id">
                        <field name="name"/>
                        <field name="sh_email"/>
                        <field name="sh_job_id"/>
                        <field name="sh_stage_id"/>
                        <field name="sh_applicant_user_id"/>
                        <field name="sh_skill_ids"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top mb8">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            Job title:<strong> <field name="sh_job_id"/></strong>
                                        </small>
                                    </div>

                                </div>

                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        

        <!-- List view -->
        <record id="recruitment_applicant_list" model="ir.ui.view">
            <field name="name">recruitment.applicant.list</field>
            <field name="model">recruitment.applicant</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="sh_email"/>
                    <field name="sh_job_id"/>
                    <field name="sh_stage_id"/>
                    <field name="sh_applicant_user_id"/>
                    <field name="sh_skill_ids"/>


                </list>
            </field>
        </record>





                <!-- Actions -->
                <record id="recruitment_applicant_actions" model="ir.actions.act_window">
                    <field name="name">Applicant</field>
                    <field name="res_model">recruitment.applicant</field>
                    <field name="view_mode">kanban,list,form</field>

                </record>

            </data>
        </odoo>