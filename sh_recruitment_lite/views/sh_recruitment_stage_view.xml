<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="recruitment_stage_form" model="ir.ui.view">
            <field name="name">recruitment.stage.form</field>
            <field name="model">recruitment.stage</field>
            <field name="arch" type="xml">
                <form>
                    <group>

                        <field name="name"/>

                    </group>

                </form>
            </field>
        </record>

        <!-- List view -->
        <record id="recruitment_stage_list" model="ir.ui.view">
            <field name="name">recruitment.stage.list</field>
            <field name="model">recruitment.stage</field>
            <field name="arch" type="xml">
                <list>
                        <field name="name"/>


                </list>
            </field>
        </record>

        <!-- Actions -->
        <record id="recruitment_stage_actions" model="ir.actions.act_window">
            <field name="name">Stages</field>
            <field name="res_model">recruitment.stage</field>
            <field name="view_mode">list,form</field>

        </record>

    </data>
</odoo>