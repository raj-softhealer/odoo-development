<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="recruitment_job_form" model="ir.ui.view">
            <field name="name">recruitment.job.form</field>
            <field name="model">recruitment.job</field>
            <field name="arch" type="xml">
                <form>
                    <group>

                        <field name="name"/>
                        <field name="sh_hiring_manager_id"/>
                        <field name="sh_state"/>
                        

                    </group>
                        <notebook>
                        <page string="Applicants">
                        <field name="sh_applicant_ids"/>
                        </page>
                        </notebook>

                </form>
            </field>
        </record>

        <!-- List view -->
        <record id="recruitment_job_list" model="ir.ui.view">
            <field name="name">recruitment.job.list</field>
            <field name="model">recruitment.job</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="sh_hiring_manager_id"/>
                    <field name="sh_state"/>
                    <field name="sh_applicant_ids"/>


                </list>
            </field>
        </record>


        <record id="recruitment_job_actions" model="ir.actions.act_window">
            <field name="name">Job Positions</field>
            <field name="res_model">recruitment.job</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>