<odoo>
  <record id="view_library_author_form" model="ir.ui.view">
    <field name="name">library.author.form</field>
    <field name="model">library.author</field>
    <field name="arch" type="xml">
      <form string="Author">
        <group>
          <field name="name"/>
          <field name="biography"/>
        </group>
        <notebook>
          <page string="Books">
            <field name="book_ids">
              <list>
                <field name="name"/>
                <field name="book_category" widget="many2many_tags"/>
              </list>
            </field>
          </page>
        </notebook>
      </form>
    </field>
  </record>

  <record id="view_library_author_tree" model="ir.ui.view">
    <field name="name">library.author.list</field>
    <field name="model">library.author</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
      </list>
    </field>
  </record>

  <record id="action_library_author" model="ir.actions.act_window">
    <field name="name">Authors</field>
    <field name="res_model">library.author</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
