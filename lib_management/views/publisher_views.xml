<odoo>
  <record id="view_library_publisher_form" model="ir.ui.view">
    <field name="name">library.publisher.form</field>
    <field name="model">library.publisher</field>
    <field name="arch" type="xml">
      <form string="Publisher">
        <group>
          <field name="name"/>
          <field name="website"/>
        </group>
        <notebook>
          <page string="Published Books">
            <field name="book_ids">
              <list>
                <field name="name"/>
                <field name="author_id"/>
              </list>
            </field>
          </page>
        </notebook>
      </form>
    </field>
  </record>

  <record id="view_library_publisher_tree" model="ir.ui.view">
    <field name="name">library.publisher.list</field>
    <field name="model">library.publisher</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="website"/>
      </list>
    </field>
  </record>

  <record id="action_library_publisher" model="ir.actions.act_window">
    <field name="name">Publishers</field>
    <field name="res_model">library.publisher</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
